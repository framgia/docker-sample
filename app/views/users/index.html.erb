<p id="notice"><%= notice %></p>

<h1>Users</h1>

<%= form_tag users_path do %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= link_to 'Show', user %></td>
          <td><%= link_to 'Edit', edit_user_path(user) %></td>
          <td><%= check_box_tag 'unavailable', user.id, user.archived %></td>
        </tr>
      <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>
<%= submit_tag 'Delete User' %>
    <% end %>
